<!-- AuthBox.astro -->
---
import "../styles/global.css";
import Layout from "../layouts/layout.astro";
---

<div class="min-h-[300px] max-w-md mx-auto bg-gray-800 rounded-xl shadow-xl p-8 mt-12">
  <h2 class="text-2xl font-bold text-cyan-300 mb-6">Iniciar sesión</h2>
  
  <form class="space-y-4">
    <div>
      <label for="email" class="block text-gray-300">Email</label>
      <input id="email" type="email" placeholder="tu@correo.com"
        class="w-full mt-1 px-4 py-2 rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-cyan-400" />
    </div>
    
    <div>
      <label for="password" class="block text-gray-300">Contraseña</label>
      <input id="password" type="password" placeholder="••••••••"
        class="w-full mt-1 px-4 py-2 rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-cyan-400" />
    </div>

    <button type="submit"
      class="w-full py-3 bg-cyan-400 text-gray-900 rounded-lg font-semibold
             hover:bg-cyan-500 hover:scale-105 transition transform duration-200">
      Continuar
    </button>
  </form>

  <div class="mt-6 text-center text-gray-400">o</div>
  <button
    class="mt-4 w-full flex items-center justify-center space-x-2 py-3 border-2 border-gray-600 rounded-lg
           hover:bg-gray-700 hover:border-cyan-400 transition duration-200">
    <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google" class="w-5 h-5" />
    <span class="text-gray-200 font-medium">Continuar con Google</span>
  </button>
</div>

